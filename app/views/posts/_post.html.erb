  <div class="container my-5 py-5">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 col-xl-8">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-start align-items-center">
              <div id="avatar">
                  <%= image_tag user.avatar_image_url, id: "avatar"%>    
              </div>
              <div>
                <h6 class="fw-bold text-primary mb-1">
                  <%= post.author %>
                </h6>
                <p class="text-muted small mb-0">
                  <%= translate("shared_publicly") %> <%= post.published_time %>
                </p>
              </div>
            </div>
            <p align="center" > <strong> <%= post.title %> </strong></p>
            <p class="mt-3 mb-4 pb-2">
              <%= post.body %>
            </p>

            <div class="small d-flex">
              <% if post.is_liked?(current_user.id) %>
                <%= button_to (render 'likes/unlike'), post_like_path(post, post.like()), method: :delete, class: "bi bi-hand-thumbs-up"  %> 
              <% else %>
                <%= link_to (render 'likes/like'), post_likes_path(post), data: { turbo_method: :post, turbo: true }, class: "bi bi-hand-thumbs-up"   %> 
              <% end %>
              <span>&nbsp</span>
              <div style="margin-left: 2%;">
                <%= post.likes.size %>
              </div>
              
              <span>&nbsp</span>
              <div style="margin-left: 78%;">
                <%= post.show_comment %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="d-none" id="comment">
  <%= post.is_approve? %>
</div>

